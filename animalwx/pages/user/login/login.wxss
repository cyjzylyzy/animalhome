
.container{
  margin-top: 100rpx;
  width: 100%;
  height:900rpx;
  position:relative;
  display: flex;
    
}
.container>image{
 
  width: 100%;
  height: 100%;
}
.form-box {
  width: 100%;
  height: auto;
  padding: 0 40rpx;
  margin-top: 200rpx;
  background: #f4f4f4;
  position: absolute;
  opacity: 0.8;
}

.form-item {
  position: relative;
  background: #f4f4f4;
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #d9d9d9;
  display: flex;
  flex-direction: row;
}
.form-item-phone {
  margin-top: 32rpx;
  height: auto;
  overflow: hidden;
}
.phone{
  margin-top: 32rpx;
  font-family: 楷体;
  font-size: 35rpx;
}
.form-item-password{
  margin-top: 32rpx;
  height: auto;
  overflow: hidden;
}
.password{
  margin-top: 32rpx;
  font-family: 楷体;
  font-size: 35rpx;
}

.form-item-code {
  margin-top: 32rpx;
  height: auto;
  overflow: hidden;
}
.code{
  margin-top: 32rpx;
  font-family: 楷体;
  font-size: 35rpx;
}
.getcode{
  width: 150rpx;
  height: 35rpx;
  margin-top: 22rpx;
  padding: 15rpx;
  font-family: 楷体;
  font-size: 30rpx;
  border-radius: 40rpx;
  border: 2px solid green;

}
.form-item-code .form-item {
  float: left;
  width: 350rpx;
}


.login-btn {
  margin: 60rpx 0 40rpx 0;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 30rpx;
  border-radius: 6rpx;
  width: 90%;
  color: #91f83c;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  position: flex;
  bottom: 0;
  left: 0;
  padding: 0;
  margin-left: 5%;
  text-align: center;
  /* padding-left: -5rpx; */
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  letter-spacing: 3rpx;
  background-image: linear-gradient(to right, #8be96f 0%, #a1d863 100%);
  opacity: 1;
}

.form-item-text {
  height: 35rpx;
  width: 100%;
}

.form-item-text .register {
  display: block;
  height: 34rpx;
  float: left;
  font-size: 28rpx;
}

.form-item-text .reset {
  display:block;
  width: 25%;
  height: 34rpx;
  float: right;
  font-size: 28rpx;
}