page{
    background: #e7e7e4;
}
.form-text{
    display: flex;
    
}
.container{
    padding-bottom: 200rpx;
}
.form-image{
    width: 100%;
    height: 500rpx;
}
.lunbo{
    width: 100%;
    height: 500rpx;
    margin-top: 5rpx;
}
.lunboimg{
    width: 100%;
}
.form-top{
    width: 100%;
    height: auto;
    background-color: white;
}
.form-text{
    margin-top: 5rpx;
    width: 100%;
    height: 50rpx;
    /* border-bottom: 1rpx solid #d6d2d2; */
}
.form-text>text{
    margin-top: 10rpx;
    margin-left: 10rpx;
}
.form-info{
    margin-top:10rpx;
    margin:0 auto ;
    width: 80%;
    height: 200rpx;
    box-shadow: 5rpx 5rpx 5rpx 5rpx #bebeba;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
}
.form-infobox{
    margin-top: 20rpx;
    margin-left: 30rpx;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
.form-infotext{ 
    width: 30%;
    height: 100rpx;
    display: flex;
    flex-direction: row;  
}
.form-infotext image{
    width: 50rpx;
    height: 50rpx;
    margin-right: 10rpx;
}
.form-infotext text{
    text-align: center;
    line-height: 50rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: #299cbe;
}
.form-story{
    margin-top: 32rpx;
    width: 100%;
    height: 200rpx;
}
.form-storytext{
    margin-top: 5rpx;
    margin-left: 5rpx;
    font-weight: bolder;
    color: #abdf4a;
}
.form-story-detail{
    margin-top:20rpx;
    margin:0 auto ;
    width: 98%;
    height: 150rpx;
    box-shadow: 1rpx 5rpx 1rpx 1rpx #bebeba;
}
.form-adopt{
    width: 100%;
    height: 200rpx;

}
.form-seekperson{
    margin-top: 5rpx;
    background: white;
    height: 200rpx;
}

.form-notice{
    margin-top: 5rpx;
    background: white;
    height: 210rpx;
}
.form-adoptcond{
    margin-top: 5rpx;
    background: white;
    height: 400rpx;
}
.form-adoptcond>image{
    width: 100%;
    height: 380rpx;
}
.parent{
    width: 92%;
    display: flex;
    flex-direction: row;
    
}
.child{
    margin-top: 12rpx;
    margin-left: 30rpx;
    height: 50rpx;
    display: flex;
    flex-direction: column;
    box-shadow: 1rpx 5rpx 2rpx 2rpx silver;
    background: #e4e1e1;
    
}
.form-comment{
    margin-top: 12rpx;
    margin-left: 10rpx;
    display: flex;
    flex-direction: column;
    box-shadow: 5rpx 5rpx 5rpx 5rpx silver;
}
.form-reply{
    margin-top: 22rpx;
    margin-left: 10rpx;
    background: white;
    width: 100%;
    
}
.big-avatar{
    width: 50rpx;
    height: 50rpx;
}
.top{
    border-top:2rpx solid #bebeba;
    margin-top:22rpx ;
    
}
.btn{
    width: 20%;
    height: 40rpx;
    background:wheat;
    margin: 0 auto;
    text-align: center;
}
.reply{
    margin-left: 20rpx;
}
.replyline{
    display: flex;
    flex-direction: row;

}
.hide{
    width: 20%;
    margin-left: 300rpx;
}

.bottom{
    width: 100%;
    height: 120rpx;
    position:fixed;
    bottom: 0;
    background: white;
    border-top: 2rpx solid gainsboro;
    display: flex;
    flex-direction: row;
    justify-content: space-around;

}
.from-bottom{
    display: flex;
    flex-direction: column;
    text-align: center; 
}
.bottom-img{
    width: 80rpx;
    height: 80rpx;
}
.apply{
    width: 200rpx;
    height: 80rpx;
    margin: auto;
    text-align: center;
    line-height: 80rpx;
    font-weight: bold;
    background: #fad638;
    border-radius: 50rpx;
}