/* pages/indexitem/attendance/attendance.wxss */
page{
    background: #faf8eb;
}
.signbkimg{
    width: 100%;
    height: 241rpx;
    position:relative;
}
.signbkimg>image{
    width: 100%;
    height: 100%;
}
.sign-con{
    width: 92%;
    height: 213rpx;
    padding: 0 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: absolute;
    top: 0;
}
.headNews-left{
    display: flex;
    align-items: center;
}
.headNews-left>image{
    width: 133rpx;
    height: 133rpx;
    border: 6rpx solid gold;
    border-radius: 50%;
}
.nikename{
    margin-left: 30rpx;
}
.nikename>view:nth-child(1){
    font-size: 40rpx;
    font-weight: bold;
}
.nikename>view:nth-child(2){
    font-size: 26rpx;
    margin-top: 12rpx;
}
.calendar{
    margin: 32rpx;
    background: #f3f1dc;
    box-shadow: 2rpx 2rpx 5rpx 2rpx wheat;
    padding: 30rpx;
    width: 85%;
    margin-left: 4%;
    border-radius: 50rpx;
    display: block;
}
.time{
    padding: 16rpx 20rpx;
    background: wheat;
    display: flex;
}
.time view{
    flex: 1;
    font-size: 30rpx;
}
.time view text{
    font-size: 38rpx;
}
.preNext-path{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.time{
    padding: 16rpx 20rpx;
    display: flex;
    text-align: center;
}
.weekName{
    font-size: 36rpx;
    width: 100%;
    display: flex;
    padding: 16rpx 0;
}
.weekName view{
    flex: 1;
    text-align: center;
}
.sunday,.saturday{
    color: #f8a6a6;
}
.week{
    width: 100%;
}
.week view{
    width: 14%;
    height: 90rpx;
    line-height: 80rpx;
    text-align: center;
    display: inline-block;
    margin: 10rpx 0;
}
.week view text{
    width: 100%;
    height: 100%;
    display: inline-block;
}
.calendarSign{
    margin: 40rpx;
}
.selDate{
    font-size: 28rpx;
    border-bottom: 1px solid rgb(37, 12, 16);
}
.selDateItem{
    color: #a09a61;
    font-weight: bold;
    font-size: 22rpx;
    border-radius: 50%;
}
.signInbtn{
    width: 235rpx;
    height: 77rpx;
    text-align: center;
    border-radius: 10rpx;
    background: rgb(221, 115, 141);
}