.navbar{
   display: flex;
   flex: none;
   text-align: center;
   background: #494949;
   border-bottom: 1rpx solid #DFDFDF;
}
.navbar .item{
   position: relative;
   flex: auto;
   text-align: center;
   line-height: 80rpx;
}
.navbar .item.active{
   color: #494949;
} 
.navbar .item.active:after{
   content: "";
   display: block;
   position: absolute;
   bottom: 0;
   left: 0;
   right: 0;
   height: 4rpx;
   background: chocolate;
}

