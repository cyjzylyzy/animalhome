/* pages/indexitem/answer/answer.wxss */
.time{
  width: 93%;
  height: 40px;
  position:sticky;
  top: 0;
  margin: 0 auto;
  background-color: #E6E6E6;
  text-align: center;
  line-height: 40px;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}
.timetxt{
  border-top-right-radius: 10px;
  width: 82px;
  height: 40px;
  position: relative;
  left:  72%;
}

.timuId {
  width:150rpx;
  height: 80rpx;
  display: block;
  box-sizing: border-box;
  background-color: #FFE066;
  border-radius: 10px;
  text-align: center;
  line-height: 80rpx;
  margin: 0 auto;
  margin-top: 5px;
  margin-bottom: 5px;
}

.container {
  width: 90%;
  margin-top: 20px;
  margin: 0 auto;
  min-height: 580px;
  background-color: #DDDDDD;
  border-radius: 8px;
  padding: 10px;
}


.timubox {
  width: 93%;
  min-height: 50px;
  background-color: #DDFFFF;
  border-radius: 8px;
  padding: 10px;
}
.selection{
  margin-left: 20rpx;
}
.selections {
  width: 93%;
  min-height: 240px;
  margin-top: 20px;
  margin-left: 10rpx;
  background-color: #FFFFCC;
  border-radius: 8px;
  padding: 10px;
}

.selectionSon {
  width: 93%;
  min-height: 40px;
  background-color: #CCFFEB;
  border-radius: 8px;
  margin-top: 10px;
  padding: 10px;
  line-height: 40px;
  display: flex;
  flex-direction: row;
}

.selectionSon .tipselect {
  font-weight: 800;
  font-size: 15px;
}

.selectionSon section {
  min-height: 20px;
}

/* 点击弹窗 */
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}

.modalDlg {
  width: 580rpx;
  min-height: 450rpx;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  margin: -370rpx 85rpx;
  /* background-color: #fff; */
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #BBFFFF;
}

.dialog {
  width: 100%;
  height: 40px;
  display: flex;
  flex-direction: row;
  background-color: #DDFFFF;
  border-top-left-radius: 36rpx;
  border-top-right-radius: 36rpx;
  border-bottom: 2px solid black;
}

.dialog-head {
  width: 80px;
  margin-left: 10px;
  margin-top: 10px;
}

.dialog-head h3 {
  font-size: 15px;
  margin-left: 20px;
  font-weight: 600;
}

.close_mask {
  color: #000;
  position: relative;
  margin-left: 57%;
  margin-top: 10px;
  font-size: 32rpx;
}
.tishi{
  font-size: 18px;
  color: red;
  font-weight: 800;
  margin-top: 30px;
}

.btnFlex {
  width: 100%;
  height: 100px;
  margin-top: 23px;
  display: flex;
  border-bottom-right-radius: 36rpx;
  border-bottom-left-radius: 36rpx;
}

.btn {
  position: relative;
  margin-top: 40px;
  background: #d95155;
  text-align: center;
  border-radius: 12rpx;
}